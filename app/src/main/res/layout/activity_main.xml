<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dam.proyecto.paintapp.MainActivity">

    <view
        android:id="@+id/vVistaPintada"
        class="com.dam.proyecto.paintapp.VistaPintada"
        id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imOptions" />

    <ImageButton
        android:id="@+id/imOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ajustes" />

    <ImageButton
        android:id="@+id/ibRectangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_action_name" />

    <ImageButton
        android:id="@+id/ibCircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/ibRectangle"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circle" />

    <ImageButton
        android:id="@+id/ibFreeLine"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        app:layout_constraintStart_toEndOf="@+id/ibCircle"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/free_line" />

    <ImageButton
        android:id="@+id/ibStrightLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/ibFreeLine"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/linea_recta" />

    <ImageButton
        android:id="@+id/ibRedo"
        android:layout_width="52dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/ibStrightLine"
        app:layout_constraintEnd_toStartOf="@+id/imOptions"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/redo" />

    <ImageButton
        android:id="@+id/ibUndo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/ibStrightLine"
        app:layout_constraintEnd_toStartOf="@+id/ibRedo"
        app:layout_constraintStart_toEndOf="@+id/ibStrightLine"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/undo" />

</android.support.constraint.ConstraintLayout>
